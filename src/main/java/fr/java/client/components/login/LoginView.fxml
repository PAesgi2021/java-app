<VBox prefHeight="720" prefWidth="1280" style="-fx-background-color: #187bc1" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="fr.java.client.components.login.LoginController">
   <children>
      <Pane prefHeight="40" prefWidth="1280" style="-fx-background-color: #1571b1;">
         <children>
            <Text fill="WHITE" layoutX="580.0" layoutY="30.0" opacity="0.3" text="LOGIN" textAlignment="CENTER">
               <font>
                  <Font name="Leelawadee UI Bold" size="25.0" />
               </font>
            </Text>
         </children>
      </Pane>
      <AmbientLight color="CHARTREUSE" lightOn="true" />
      <AnchorPane>
         <VBox.margin>
            <Insets bottom="80.0" left="250.0" right="250.0" top="80.0" />
         </VBox.margin>
         <children>
            <Pane prefHeight="485.0" prefWidth="780.0" style="-fx-background-color: #DDDDDD#DDDDDD;">
               <children>
                  <TextField fx:id="tfUsername" layoutX="268.0" layoutY="172.0" prefHeight="29.0" prefWidth="245.0" promptText="Username" style="-fx-background-color: white;" styleClass="tferror" stylesheets="@LoginView.css" />
                  <TextField fx:id="tfPassword" layoutX="268.0" layoutY="238.0" prefHeight="29.0" prefWidth="245.0" promptText="Password" style="-fx-background-color: white;" styleClass="tferror" stylesheets="@LoginView.css" />
                  <Button fx:id="btSignin" layoutX="314.0" layoutY="319.0" mnemonicParsing="false" onAction="#signin" prefHeight="29.0" prefWidth="153.0" styleClass="signinBtn" text="Signin">
                     <cursor>
                        <Cursor fx:constant="HAND" />
                     </cursor></Button>
                  <Button fx:id="btRegister" layoutX="314.0" layoutY="384.0" mnemonicParsing="false" onAction="#register" prefHeight="29.0" prefWidth="153.0" styleClass="registerBtn" text="Register">
                     <cursor>
                        <Cursor fx:constant="HAND" />
                     </cursor></Button>
                  <ProgressIndicator fx:id="pgConnection" layoutX="90.0" layoutY="70.0" maxHeight="-Infinity" maxWidth="-Infinity" opacity="0.56" prefHeight="300.0" prefWidth="600.0" visible="false" />
               </children>
            </Pane>
         </children>
      </AnchorPane>
   </children>


   <stylesheets>
      <URL value="@LoginView.css" />
   </stylesheets>
</VBox>
