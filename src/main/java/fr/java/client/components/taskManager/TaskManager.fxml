<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox opacity="0.9" prefHeight="310.0" prefWidth="427.0" styleClass="manageTask" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="fr.java.client.components.taskManager.TaskManagerController">
    <children>
        <StackPane prefHeight="40.0" prefWidth="410.0">
            <children>
                <Label alignment="CENTER" contentDisplay="CENTER" style="-fx-font-weight: bolder" text="MY TASK" textAlignment="CENTER" />
            </children>
        </StackPane>
        <Pane prefHeight="202.0" prefWidth="459.0">
            <children>
                <TextField fx:id="titleTask" disable="true" layoutX="50.0" layoutY="25.0" prefHeight="25.0" prefWidth="310.0" />
                <TextArea fx:id="contentTask" disable="true" layoutX="50.0" layoutY="69.0" prefHeight="95.0" prefWidth="310.0" />
                <Label layoutX="50.0" layoutY="6.0" text="Title:" />
                <Label layoutX="49.0" layoutY="50.0" text="Description:" />
                <CheckBox fx:id="lockCheckbox" layoutX="50.0" layoutY="181.0" mnemonicParsing="false" onAction="#checkFieldAccess" styleClass="lockCheckbox" text="UNLOCK" />
                <Button fx:id="saveBtn" layoutX="320.0" layoutY="177.0" mnemonicParsing="false" onAction="#updateTaskAction" styleClass="saveBtn" text="SAVE" visible="false" />
            </children>
        </Pane>
        <Pane prefHeight="64.0" prefWidth="410.0">
            <children>
                <Button layoutX="360.0" layoutY="27.0" mnemonicParsing="false" onAction="#deleteTaskAction" prefHeight="15.0" prefWidth="53.0" styleClass="deleteTaskBtn" text="Delete" />
                <CheckBox fx:id="statusCheckbox" layoutX="25.0" layoutY="27.0" mnemonicParsing="false" onAction="#changeDynamicallyStatusCheckbox" styleClass="statusTaskCheckbox" text="CheckBox" />
            </children>
        </Pane>
    </children>

    <stylesheets>
        <URL value="@TaskManager.css" />
    </stylesheets>
</VBox>
