<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox opacity="0.9" prefHeight="303.0" prefWidth="410.0" styleClass="manageTask" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="fr.java.client.components.taskManager.TaskManagerController">
    <children>
        <StackPane prefHeight="40.0" prefWidth="410.0">
            <children>
                <Label alignment="CENTER" contentDisplay="CENTER" text="my task" textAlignment="CENTER" />
            </children>
        </StackPane>
        <Pane prefHeight="238.0" prefWidth="410.0">
         <children>
            <TextField fx:id="titleTask" disable="true" layoutX="50.0" layoutY="25.0" prefHeight="25.0" prefWidth="310.0" />
            <TextArea fx:id="contentTask" disable="true" layoutX="50.0" layoutY="69.0" prefHeight="95.0" prefWidth="310.0" />
            <Label layoutX="50.0" layoutY="6.0" text="Title:" />
            <Label layoutX="49.0" layoutY="50.0" text="Description:" />
            <CheckBox fx:id="modifiedTaskField" onAction="#checkModifiedField" layoutX="50.0" layoutY="181.0" mnemonicParsing="false" text="modified" />
            <Button onAction="#updateTaskAction" layoutX="301.0" layoutY="177.0" mnemonicParsing="false" text="Confirm" />
         </children></Pane>
      <HBox prefHeight="31.0" prefWidth="410.0">
         <children>
            <Button onAction="#validTaskAction" mnemonicParsing="false" prefHeight="48.0" prefWidth="205.0" styleClass="validTaskBtn" text="VALID TASK" />
            <Button onAction="#deleteTaskAction" mnemonicParsing="false" prefHeight="48.0" prefWidth="205.0" styleClass="deleteTaskBtn" text="DELETE TASK" />
         </children>
      </HBox>
    </children>

    <stylesheets>
        <URL value="@TaskManager.css" />
    </stylesheets>
</VBox>
